<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Registeration form</title> 
     <link href="/public/css/bootstrap_5.3.2.css" rel="stylesheet">
     <link rel="stylesheet" href="/public/css/font_awesome.css"/>
     <link rel="stylesheet" href="/public/css/registeration_form.css">

     
  </head>
  <body>
    <div class="custom_height">
        <% if(message.length > 0) {%>
            <div class="alert alert-success text-center display-6 flash">
          <%= message %>
            </div> 
          <% } %>
    </div>

    <div class="container-fluid mt-5">
        <div class="row mt-5">
            
            <div class="col-md-8">
                <div class="texting  align-items-center">
                    <h1 class="mt-3"><span class="fs_50">R</span>egister for</h1>
                    <h1>best experience</h1>
                    

                </div>
            </div>

  <div class="col-md-4 mt-5 ">


        <div class="login-box">
          <h2>Registeration</h2>
          <form method="post" action="/register" id="registertionForm" enctype="multipart/form-data">
            <div class="user-box">
              <input type="text" id="username" name="username" required="" placeholder="Author Name">

            </div>
            <div class="user-box">
              <input id="email" name="email" type="email" required="" placeholder=" Official Email">
            </div>

            <div class="user-box">
                <input id="age" name="age" type="number" required="" placeholder="Age">
              </div>

              <div class="user-box">
                <input id="password" name="password" type="password" required="" placeholder=" Set Password">
              </div>

              <div class="user-box">
                <h5 class="text-white">Share your story in the soft copy</h5>
                <input type="file" id="myfile" name="myfile" required="" placeholder="Share your story in the soft copy">
              </div>
             
              
            <a href=""><button type="submit" class="btn text-white">
              <span></span><span></span><span></span><span></span>
              Register
            </button></a>
          </form>
        </div>

        
  </div>
            
        </div>
    </div>

    <script src="../public/js/jquery_3.7.1.js"></script>
    <script src="/public/js/login_form.js"></script>

</body>
</html>
